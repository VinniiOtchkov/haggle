<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Search</title>
</head>

<body>

  <% if(!items) { %>
  <h1><center>No results! Try again!</center></h1>

  <% } else { %>

  <% for(var items of items) { %>
    <div class="col-md-4">
      <div class="title">

        <div class="col-md-2" class="searchResults">
          <img src="<%= items.img_url %>">
        </div>
        <div class="col-md-2" class="searchResults">

            <%= items.name %>
        </div>
        <div class="col-md-2" class="searchResults">

            <%= items.description %>
        </div>
        <div class="col-md-2" class="searchResults">

            <%= items.initial_price %>
        </div>
        <div class="col-md-2" class="searchResults">

            <%= items.seller_name %>
        </div>

      </div>
    </div>

    <% } %>
</body>

</html>
